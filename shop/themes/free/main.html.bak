{strip}
    {$class = ''}
    {if $action == 'onestep'}
        {$class = ' custom-onestep'}
    {/if}
    {if $action == 'checkoutone'}
        {$class = ' custom-cartonestep'}
    {/if}
    {if $action == 'brands'}
        {$class = ' brand-list'}
    {/if}

    {include file="`$wa_active_theme_path`/breadcrumbs.html"}

    {if $wa->globals('isMyAccount')}
        {$wa->myNav('pages')}
    {/if}

    <!-- plugin hook: 'frontend_header' -->
    {* @event frontend_header.%plugin_id% *}
    {if count($frontend_header) > 0}
        {foreach $frontend_header as $_}{$_}{/foreach}
    {/if}

    {if $wa->currentUrl(false, true) != $wa_app_url
        && $action != 'checkout'
        && $action != 'category'
        && $action != 'product'
        && $action != 'compare'
        && $action != 'cart'
        && $action != 'order'
        && $action != 'productReviews'
        && $action != 'search'
        && !$wa->globals('isMyAccount')
        && $wa->currentUrl(false, true) != '/my/orders/'
        && $wa->currentUrl(false, true) != '/signup/'
        && $wa->currentUrl(false, true) != '/login/'
    }
        {if $action == 'tag'}<div class="tag-page">{/if}
            <div class="out_sidebars">
                {include file="`$wa_active_theme_path`/sidebar.html"}
            </div>
            {if $wa->globals('isSearchProPage') && isset($filters) && !empty($filters)}{$class = "`$class` searchpro-page-with-sidebar"}{/if}
            {$is_search_products_template = $wa->globals('isSearchPage') && ($action == 'search' || $action == 'brand' || $action == 'tag')}
            <div class="content{if !$is_search_products_template} content-box{/if} {if $sb_left} with-sidebar{/if} {$class}">
                {$content}
            </div>
        {if $action == 'tag'}</div>{/if}
    {else}
        {$content}
    {/if}
{/strip}
